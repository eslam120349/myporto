{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/sitemap", "destination": "/sitemap.xml" },
    { "source": "/(.*)", "destination": "/" },
    { "source": "/robots.txt", "destination": "/robots.txt" }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    }
  ]
}
